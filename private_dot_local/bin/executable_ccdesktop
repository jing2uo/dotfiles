#!/bin/bash

sudo chown -R root:root /usr/local/bin/* /opt/
sudo chmod a+x /usr/local/bin/* ~/.local/bin/*

files=(
  "bleachbit-root.desktop"
  "zellij.desktop"
  "ranger.desktop"
  "avahi-discover.desktop"
  "bvnc.desktop"
  "bssh.desktop"
  "qv4l2.desktop"
  "qvidcap.desktop"
  "btop.desktop"
  "htop.desktop"
  "vim.desktop"
  "nvim.desktop"
)

for file in "${files[@]}"; do
  sudo find /usr/share/applications -name "${file}" -exec rm -f {} +
done

cd ~/.cache
rm -rf thumbnails staticcheck ms-playwright pip typescript clangd jedi uv go-build node-gyp gopls
rm -rf nvim mesa_shader_cache mesa_shader_cache_db mpv

rm -f ~/Downloads/*.png
rm -f ~/Downloads/*.ebk
